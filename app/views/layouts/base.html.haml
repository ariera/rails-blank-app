!!!
%html
  = head_tags

  %body{class:body_css_classes}
    = bootstrap_data

    = render partial:"shared/global_header"

    - if content_for?(:layout_specific)
      = yield(:layout_specific)
    - else
      %main
        = render 'shared/flashes'
        = yield

    = render partial:"shared/global_footer"

    = dev_tools

    = render 'shared/javascript'
