!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no", name: "viewport"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{}
    = stylesheet_link_tag :application, :media => 'all'
    = csrf_meta_tags
    %title
      = yield(:title)
  %body{class:body_css_classes}
    = bootstrap_data
    = dev_tools
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} Project name
        .navbar-collapse.collapse
          %form.navbar-form.navbar-right{:role => "form"}
            .form-group
              %input.form-control{:placeholder => "Email", :type => "text"}/
            .form-group
              %input.form-control{:placeholder => "Password", :type => "password"}/
            %button.btn.btn-success{:type => "submit"} Sign in
    %header
    %main{:role => "main"}
      - if content_for?(:layout_specific)
        = yield(:layout_specific)
      - else
        = yield
      = render 'shared/javascript'


